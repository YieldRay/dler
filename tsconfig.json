{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "verbatimModuleSyntax": true,
        "erasableSyntaxOnly": true,
        "rewriteRelativeImportExtensions": true,
        "outDir": "lib",
        "typeRoots": ["node_modules/@types", "src/types"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
}
